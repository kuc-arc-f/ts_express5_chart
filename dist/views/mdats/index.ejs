<!-- -->
<script>
new Vue({
    el: '#app',
    created () {
        this.getTasks();
        console.log("#tasks.index");
    },    
    data: {
        mdats: [],
    },
    methods: {
        getTasks () {
            axios.get("/api_mdats/index").then(res =>  {
                var items = res.data.docs
                var arr =[];
                items.forEach( function (item) {
                    item.url ="/tasks/show/" + item._id
//console.log( item )                    
                    arr.push(item)
                });      
                this.mdats = arr;
            })        
        }
    }

});
</script>